<div class="section mx-6 my-6 px-6 py-6">
  <div class="container mx-6 my-5 px-6 py-5">
    <div class="columns">

      <div class="column is-half px-6 mx-6 pt-5 mt-5">
        <h1 class="is-size-1 has-text-weight-bold has-text-info mb-0"> odinbook </h1>
        <p class="is-size-4 is-family-sans-serif has-text-black"> Connect with friends and the world around you on Odinbook. </p>
      </div>

      <div class="column is-half">
          <div class="box">
            
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <div class="control">
                  <%= f.input :email, required: true,  input_html: { class: "input"}, wrapper: false, label_html: {class: "label"} %><br />
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :password, required: true,  input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %><br />
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.button :submit, "Log in", class: "button is-size-5 is-info is-fullwidth" %>
                </div>
              </div>

              <p class="is-size-6 has-text-centered has-text-link mt-4">
                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
              </p>

              <hr class="content-divider">

              <p class="button is-size-5 is-info is-light is-fullwidth">
                <%= link_to "Create new account", new_registration_path(resource_name) %><br />
              </p>
            
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
