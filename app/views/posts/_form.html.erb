<%= simple_form_for(post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <div class="control">
      <%= f.rich_text_area :body, label: "whats on your mind", input_html: {class: "textarea"}, wrapper: false,
          label_html: {class: "label"}, placeholder: "Whats on your mind", autofocus: true %>
    </div>
  </div>
  <div class="buttons">
    <div class="form-actions pr-2">
      <%= f.button :submit, class: "button is-info is-light" %>
    </div>
  </div>

<% end %>