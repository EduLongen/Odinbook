<%= form_with(model: [post, post.comments.build]) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.rich_text_area :body, input_html: {class: "textarea"}, wrapper: false,
          label_html: {class: "label"}, placeholder: "...", autofocus: true %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "button is-info is-light" %>
  </div>
<% end %>