<div class="box">
	<article class="media">
		<div class="media-left">
			<figure class="image is-64x64">
				<% if comment.user.avatar.attached? %>
					<%= image_tag user_avatar(comment.user), resize_to_fill: [150, nil], class:"is-rounded" %>
				<% else %>
					<%= image_tag "default_avatar.png" %>
				<% end %>
			</figure>
		</div>
		<div class="media-content">
			<div class="content">
				<p><strong><%= link_to comment.user.name, user_path(comment.user) %></strong> - <%= time_tag comment.created_at, "data-local": "time-ago" %></p>
				<p><%= comment.body %></p>
			</div>
      <% if user_signed_in? && current_user.id == comment.user_id %>
        <div class="level-right is-mobile">
          <%= button_to "delete", [post, comment], method: :delete, class: "button is-small is-danger is-light" %>
        </div>
      <% end %>
		</div>
	</article>
</div>
